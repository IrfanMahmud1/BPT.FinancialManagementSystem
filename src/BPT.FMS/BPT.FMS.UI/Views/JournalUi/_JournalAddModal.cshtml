@using BPT.FMS.Domain.Dtos
@model JournalDto;
@{
    ViewData["Title"] = "Add Journal";
    var formattedDate = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<div class="modal fade" id="journal-addModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-dark-emphasis fw-bolder fs-5">Create</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row col-md-12 col-sm-12 col-sx-12">
                    <form id="journal-addModal-createForm" asp-antiforgery="true" asp-area="" asp-controller="Journal"
                          asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="card-body">
                            <div class="row justify-content-center">
                                <div class="row mb-1 col-md-12 col-sm-12 col-sx-12">
                                    <!-- Type -->
                                    <div class="row align-items-center col-md-6 col-sm-12 col-sx-12">
                                        <label class="col-form-label fw-bold">Type</label>
                                        <div>
                                            <select asp-for="Type" id="journal-addModal-ddlType" class="form-select" required>
                                                <option value="">Select Type</option>
                                                <option value="General">General Journal</option>
                                                <option value="Adjustment">Adjustment Entry</option>
                                                <option value="Closing">Closing Entry</option>
                                                <option value="Reversal">Reversal Entry</option>
                                            </select>
                                            <span asp-validation-for="Type" class="text-danger" id="journal-addModal-spnType"></span>
                                        </div>
                                    </div>

                                    <!-- Reference -->
                                    <div class="mb-1 row align-items-center col-md-6 col-sm-12 col-sx-12">
                                        <label class="col-form-label fw-bold">Reference No</label>
                                        <div>
                                            <input type="text" asp-for="ReferenceNo" id="journal-addModal-txtReferenceNo" class="form-control" />
                                            <span asp-validation-for="ReferenceNo" class="text-danger" id="journal-addModal-spnReferenceNo"></span>
                                        </div>
                                    </div>

                                    <!-- Date -->
                                    <div class="mb-1 row align-items-center">
                                        <label class="col-form-label fw-bold">Date</label>
                                        <div>
                                            <input type="datetime-local" asp-for="Date" id="journal-addModal-dteDate" min="@formattedDate" value="@formattedDate" class="form-control" />
                                            <span asp-validation-for="Date" class="text-danger" id="journal-addModal-spnDate"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-center mb-4 col-md-12 col-sm-12 col-sx-12">
                        <!-- Account -->
                        <div class="mb-1 row align-items-center col-md-4">
                            <label class="col-form-label fw-bold">Account</label>
                            <div>
                                <select id="journal-addModal-ddlChartOfAccountId" name="journal-addModal-ddlChartOfAccountId" class="form-select">
                                </select>
                            </div>
                        </div>

                        <!-- Debit -->
                        <div class="mb-1 row align-items-center col-md-4">
                            <label class="col-form-label fw-bold">Debit</label>
                            <div>
                                <input type="number" id="journal-addModal-nbrDebit" class="form-control" />
                            </div>
                        </div>

                        <!-- Credit -->
                        <div class="mb-1 row align-items-center col-md-4">
                            <label class="col-form-label fw-bold">Credit</label>
                            <div>
                                <input type="number" id="journal-addModal-nbrCredit" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row text-center mb-3 col-md-12 col-sm-12 col-sx-12">
                        <div class="text-center" style="width:100%; flex: 1; padding-top:10px">
                            <button id="btnAdd" onclick="addEntry()" type="button" style="width: 120px" class="btn btn-success btn-sm details-text">Add</button>
                        </div>
                    </div>
                    <div class="row text-center col-md-12 col-sm-12 col-sx-12">
                        <div id="addedJournalEntriesTable" style="display: none;" class="row col-md-12 col-sm-12 col-sx-12">
                            <table id="dtJournalEntriesList" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Account</th>
                                        <th>Debit</th>
                                        <th>Credit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer bg-secondary-subtle">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="journal-addModal-createButton" class="btn btn-danger">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}